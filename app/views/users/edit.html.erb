<table class='block-box' style='padding: 25px; margin: auto;'>
<tr><td COLSPAN=2 style='font-size: 18px; padding-bottom: 10px;'>
<%= image_tag '/images/icons/32x32/user_edit.png', :style => "vertical-align:middle" %> Edit <%= @user.username %></td></tr>

<%= form_for(@user) do |f| %>

  <% if @user.errors.any? %>  
  <div id="errorExplanation">  
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>  
    <ul>  
    <% @user.errors.full_messages.each do |msg| %>  
      <li><%= msg %></li>  
    <% end %>  
    </ul>  
  </div>  
  <% end %>  

  <tr><td>
    <%= raw f.label :name %>
  </td><td>
    <%= raw f.text_field :name %>
  </td></tr>

  <tr><td>
    <%= raw f.label :email %>
  </td><td>
    <%= raw f.text_field :email %>
  </td></tr>

  <tr><td>
    <%= raw f.label :password %>
  </td><td>
    <%= raw f.password_field :password, {:value => ''} %>
  </td></tr>

  <tr><td COLSPAN=2 style='text-align: right;'>
    <%= f.submit "Update" %>
  </td></tr>

<% end %>

</table>
