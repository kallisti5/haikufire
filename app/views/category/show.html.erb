<h3><%=h @category.name %></h3>
<div class='description'><%= @category.description %></div>

<% if @softwares.count == 0 %>

	<div class='alert'>
			No items found in this <%= controller_name %>
	</div>

<% else %>

	<% @softwares.each do |software| %>
		<%
			if FileTest.exists?("public/repo/#{software.id}/icon.png")
				icon = "/repo/#{software.id}/icon.png";
			else
				icon = "/images/icons/generic.png";
			end
		%>
	
	        <table class='item'>
	                <tr>
	                <th> <%= image_tag icon %> </th>
	                <td> <span style='border-bottom: 1px solid #567EBB;'>
	                        <%= link_to software.title, "/softwares/show/" << software.title %>
			<span style='font-size: 0.8em;'> by <%= software.author %></span> </span>
	                <div style='font-size: 0.8em;'><%= software.description %></div> </td>
	                </tr>
	        </table>
	
	<% end %>

<% end %>
