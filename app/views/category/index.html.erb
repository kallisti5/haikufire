<% @categories.each do |category| %>  
<table id=item_table>
        <tr style='background-color: #F0F0F0;'>
                <td width=32px;><%= image_tag "/images/category_icons/#{category.name.downcase}.png" %></td>
                <td style='border-left: 1px solid #AAAAAA; padding-left: 5px;'>
			<%= link_to category.name, "/category/show/#{category.id}" %>
                        <br><span style='font-size: 0.8em; margin-left: 5px;'><%= category.description %></span>
                </td>
        </tr>
</table>
<% end %>  
