<% @categories.each do |category| %>  
<table class=item>
        <tr>
                <th width=32px;><%= image_tag "/images/category_icons/#{category.name.downcase}.png" %></th>
                <td>
			<%= link_to category.name, "/category/show/#{category.name}" %>
                        <br><span style='font-size: 0.9em; margin-left: 5px;'><%= category.description %></span>
                </td>
        </tr>
</table>
<% end %>  
