<table class='block-box' style='padding: 25px; margin: auto; width:90%;'>
<tr><td COLSPAN=3 style='font-size: 18px; padding-bottom: 10px;'>
<%= image_tag '/images/icons/32x32/disk_multiple.png', :style => "vertical-align:middle" %> Downloads for <%=@software.title%></td></tr>

  <tr><td style='border-bottom: 1px solid #567EBB; width:95px;'><b>Architecture</b></td>
      <td style='border-bottom: 1px solid #567EBB;' NOWRAP ><b>Current file</b></td>
      <td style='border-bottom: 1px solid #567EBB; width:75px;' NOWRAP><b>Actions</b></td></tr>
<% @arches.each do |arch| %>
  <tr><td>
    <%= raw arch.name %>
  </td><td>
    <% item = @software.downloads.where( :arch_id => arch.id ).first %>
    <% if (!item) %>
    <span style='color: #ccc'>none</span>
    <% else %>
    <%= sanitize(item.dl_file_name) %>
    <% end %>
  </td><td>
    <%= link_to (image_tag '/images/icons/16x16/pencil.png', :style => "vertical-align:middle"), :controller => "downloads", :action => "edit", :id => @software.title %>
    <%= link_to (image_tag '/images/icons/16x16/delete.png', :style => "vertical-align:middle"), :controller => "downloads", :action => "delete", :id => @software.title %>
  </td></tr>
<% end %>

</table>
