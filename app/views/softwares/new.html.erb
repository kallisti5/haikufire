<table class='block-box' style='padding: 25px; margin: auto;'>
<tr><td COLSPAN=2 style='font-size: 18px; padding-bottom: 10px;'>
<%= image_tag '/images/icons/32x32/user_add.png', :style => "vertical-align:middle" %> New software</td></tr>

<% form_for(@software) do |f| %>
<%= f.error_messages %>
  <tr><td>
    <%= f.label :title %>
  </td><td>
    <%= f.text_field :title %>
  </td></tr>

  <tr><td>
    <%= f.label :version %>
  </td><td>
    <%= f.text_field :version %>
  </td></tr>

  <tr><td>
    <%= f.label :author %>
  </td><td>
    <%= f.text_field :author %>
  </td></tr>

  <tr><td>
    <%= f.label :license %>
  </td><td>
    <%= f.text_field :license %>
  </td></tr>


  <tr><td COLSPAN=2 style='text-align: right;'>
    <%= f.submit "Create" %>
  </td></tr>

<% end %>

</table>
