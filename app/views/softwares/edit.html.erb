<table class='block-box' style='padding: 25px; margin: auto; width:90%;'>
<tr><td COLSPAN=2 style='font-size: 18px; padding-bottom: 10px;'>
<%= image_tag '/images/icons/32x32/textfield_rename.png', :style => "vertical-align:middle" %> Edit software</td></tr>

<% form_for(@software, :html => { :multipart => true } ) do |f| %>
<%= f.error_messages %>
  <tr><td>
    <%= f.label :title %>
  </td><td>
    <%= f.text_field :title %>
  </td></tr>

  <tr><td>
    <%= f.label :version %>
  </td><td>
    <%= f.text_field :version %>
  </td></tr>

  <tr><td>
    <%= f.label :author %>
  </td><td>
    <%= f.text_field :author %>
  </td></tr>

  <tr><td>
    <%= f.label :license %>
  </td><td>
    <%= select("software", "license", ["Apache","Apple","Artistic","Boost","BSD","CDDL","eCos","Educational","GNU","GPL","MIT","Other","Public Domain"]) %>
  </td></tr>

  <tr><td>
    <%= f.label :category_id %>
  </td><td>
    <%= collection_select(:software, :category_id, @categories, :id, :name ) %>
  </td></tr>

  <tr><td>
    <%= f.label :compiled %>
  </td><td>
    <%= select(:software, :compiled, { "Native Haiku Application"=>"native", "Compatible Legacy BeOS Application" => "compatible"}) %>
  </td></tr>

  <tr><td>
    <%= f.label :icon %>
  </td><td>
    <%= file_field(:software, :icon) %>
  </td></tr>

  <tr><td>
    <%= f.label :description %>
  </td><td>
    <%= text_area(:software, :description, :cols => 51, :rows => 15) %>
  </td></tr>

  <tr><td COLSPAN=2 style='text-align: right;'>
    <%= f.submit "Edit" %>
  </td></tr>

<% end %>

</table>
