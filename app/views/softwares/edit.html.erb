<table class='block-box' style='padding: 25px; margin: auto; width:90%;'>
<tr><td COLSPAN=2 style='font-size: 18px; padding-bottom: 10px;'>
<%= image_tag '/images/icons/32x32/textfield_rename.png', :style => "vertical-align:middle" %> Edit software</td></tr>

<%= form_for(@software, :html => { :multipart => true } ) do |f| %>

  <% if @software.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@software.errors.count, "error") %> prevented this from being saved:</h2>
    <ul>
    <% @software.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <tr><td>
    <%= raw f.label :title %>
  </td><td>
    <%= raw f.text_field :title %>
  </td></tr>

  <tr><td>
    <%= raw f.label :version %>
  </td><td>
    <%= raw f.text_field :version %>
  </td></tr>

  <tr><td>
    <%= raw f.label :author %>
  </td><td>
    <%= raw f.text_field :author %>
  </td></tr>

  <tr><td>
    <%= raw f.label :website %>
  </td><td>
    <%= raw f.text_field :website %>
  </td></tr>

  <tr><td>
    <%= raw f.label :license %>
  </td><td>
    <%= raw f.select(:license, ["Apache","Apple","Artistic","Boost","BSD","CDDL","eCos","Educational","GNU","GPL","MIT","Other","Public Domain"]) %>
  </td></tr>

  <tr><td>
    <%= raw f.label :category_id %>
  </td><td>
    <%= raw f.collection_select(:category_id, @categories, :id, :name) %>
  </td></tr>

  <tr><td>
    <%= raw f.label :compiled %>
  </td><td>
    <%= raw f.select(:compiled, { "Native Haiku Application"=>"native", "Compatible Legacy BeOS Application" => "compatible"}) %>
  </td></tr>

  <tr><td>
    <%= raw f.label :icon %>
  </td><td>
    <%= raw f.file_field(:icon) %>
  </td></tr>

  <tr><td>
    <%= raw f.label :screenshot %>
  </td><td>
    <%= raw f.file_field(:screenshot) %>
  </td></tr>

  <tr><td>
    <%= raw f.label :description %>
  </td><td>
    <%= raw f.text_area(:description, :cols => 51, :rows => 15) %>
  </td></tr>

  <tr><td COLSPAN=2 style='text-align: right;'>
    <%= raw f.submit "Edit" %>
  </td></tr>

<% end %>

</table>
